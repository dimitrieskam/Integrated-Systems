@model EBookStore.Domain.Domain.Author

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Author</h4>
    <hr />
    <div class="row">
        <!-- Left Column for the Author Image -->
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.AuthorImage))
            {
                <img src="@Url.Content(Model.AuthorImage)" alt="Author Image" class="img-fluid" />
            }
            else
            {
                <p>No image available</p>
            }
        </div>

        <!-- Right Column for the Author Details -->
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Surname)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Surname)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Biography)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Biography)
                </dd>
            </dl>
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<style>
    html, body {
        height: 100%; /* Ensure both html and body elements take full height */
        margin: 0; /* Remove default margin */
    }

    body {
        position: relative;
        overflow-x: hidden;
    }

    .background-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('@Url.Content("~/images/dried-flowers-books.jpg")');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        filter: blur(8px); /* Apply blur effect */
        z-index: -1; /* Ensures the overlay is behind content */
    }

    /* footer {
                background-color: transparent;
                margin-top: 50px;
                padding-top: 100px;
            }
            */
    footer {
        background-color: transparent;
        margin-top: 50px;
        padding: 20px 0;
        position: relative;
        width: 100%;
        text-align: center;
    }

    html, body {
        height: auto;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .container {
        flex: 1;
    }
</style>

<!-- Add an empty div with the background overlay class for blur effect -->
<div class="background-overlay"></div>