@model EBookStore.Domain.Domain.Author

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorImage" class="control-label"></label>
                <input asp-for="AuthorImage" class="form-control" />
                <span asp-validation-for="AuthorImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Biography" class="control-label"></label>
                <input asp-for="Biography" class="form-control" />
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>
    html, body {
        height: 100%; /* Ensure both html and body elements take full height */
        margin: 0; /* Remove default margin */
    }

    body {
        position: relative;
        overflow-x: hidden;
    }

    .background-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('@Url.Content("~/images/dried-flowers-books.jpg")');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        filter: blur(8px); /* Apply blur effect */
        z-index: -1; /* Ensures the overlay is behind content */
    }

    /* footer {
                background-color: transparent;
                margin-top: 50px;
                padding-top: 100px;
            }
            */
    footer {
        background-color: transparent;
        margin-top: 50px;
        padding: 20px 0;
        position: relative;
        width: 100%;
        text-align: center;
    }

    html, body {
        height: auto;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .container {
        flex: 1;
    }
</style>

<!-- Add an empty div with the background overlay class for blur effect -->
<div class="background-overlay"></div>